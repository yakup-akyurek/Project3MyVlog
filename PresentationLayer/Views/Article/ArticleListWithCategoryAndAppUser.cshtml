@model List<Article>
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <table class="table table-hover">
        <tr>
            <th>#</th>
            <th>başlık</th>
            <th>kategori</th>
            <th>yazar</th>
            <th>tarih</th>
            <th>detaylar</th>
            <th>sil</th>
            <th>güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ArticleId</td>
                <td>@item.Title</td>
                <td>@item.Category.CategoryName</td>
                <td>@item.AppUser.Name@item.AppUser.Surname</td>
                <td>@item.CreatedDate.ToString("dd-MM-yyyy")</td>
                <td><a href="#" class="btn btn-warning"> detaylar</a></td>
                <td><a href="/Article/DeleteArticle/@item.ArticleId" class="btn btn-danger"> sil</a></td>
                <td><a href="/Article/UpdateArticle/@item.ArticleId" class="btn btn-success"> güncelle</a></td>

            </tr>

        }
    </table>
    <a href="#" class="btn btn-primary"> yeni makale girişi</a>
</div>
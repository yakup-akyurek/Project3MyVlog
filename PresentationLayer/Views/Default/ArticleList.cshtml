
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
@await Component.InvokeAsync("_ArticlelistHeadComponentPartial")
<body>
    <div class="main-container">
        <!-- Blog Listesi -->
        @await Component.InvokeAsync("_ArticleListComponentPartial")
        <div class="blog-list">
            <h2>Blog Listesi</h2>
            <div class="blog-item">
                <img src="https://via.placeholder.com/800x400" alt="Blog 1 Kapak">
                <a href="https://example.com/blog1" target="_blank">Blog Başlığı 1</a>
                <p>Bu, Blog 1'in kısa açıklamasıdır.</p>
            </div>
            <div class="blog-item">
                <img src="https://via.placeholder.com/800x400" alt="Blog 2 Kapak">
                <a href="https://example.com/blog2" target="_blank">Blog Başlığı 2</a>
                <p>Bu, Blog 2'nin kısa açıklamasıdır.</p>
            </div>
            <div class="blog-item">
                <img src="https://via.placeholder.com/800x400" alt="Blog 3 Kapak">
                <a href="https://example.com/blog3" target="_blank">Blog Başlığı 3</a>
                <p>Bu, Blog 3'ün kısa açıklamasıdır.</p>
            </div>
        </div>

        <!-- Kategori Listesi -->
        <div class="category-list">
            <h2>Kategoriler</h2>
            <ul>
                <li><a href="#kategori1">Kategori 1</a></li>
                <li><a href="#kategori2">Kategori 2</a></li>
                <li><a href="#kategori3">Kategori 3</a></li>
                <li><a href="#kategori4">Kategori 4</a></li>
            </ul>
        </div>
    </div>
</body>
</html>
